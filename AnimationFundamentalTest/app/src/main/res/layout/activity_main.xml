<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.art2cat.dev.animationfundamentaltest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="静态生成的动画：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alpha_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/scale_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/translate_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translate"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/rotate_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textAllCaps="false" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="动态生成的动画：" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/alpha_java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/scale_java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/translate_java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translate"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/rotate_java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:textAllCaps="false" />
        </LinearLayout>

        <Button
            android:id="@+id/layout_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="布局动画" />

        <Button
            android:id="@+id/frame_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="帧动画" />

        <Button
            android:id="@+id/property_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="属性动画" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/ic_android_black_24dp" />
    </LinearLayout>
</ScrollView>
