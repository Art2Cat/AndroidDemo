<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.art2cat.dev.broadcasttest.MainFragment">

    <Button
        android:id="@+id/send_normal_broadcast_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送普通广播" />

    <Button
        android:id="@+id/send_ordered_broadcast_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送有序广播" />

    <Button
        android:id="@+id/send_async_broadcast_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送异步广播" />


    <TextView
        android:id="@+id/receiver_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
